<li id="annotation-{{id}}" style="{{status}}" data-fingerprint={{fingerprint}}>
  <ul class="addon-container">
    <li><h3>{{name}}</h3></li>
    {{#each rows}}
      <li>
        {{#hasKey this "image"}}
          {{#hasKey this.image "href"}}
            <a href="{{{image.href}}}" style="border: none;text-decoration: none;"><img src="{{{image.url}}}" alt="{{image.text}}" /></a>
          {{else}}
            <img src="{{{image.url}}}" alt="{{image.text}}" />
          {{/hasKey}}
        {{/hasKey}}
        {{#hasKey this "link"}}
        {{#isArray this "link"}}
        {{#each link}}
          <a href="{{{url}}}">{{text}}</a>{{#unless @last}},{{/unless}}
        {{/each}}
        {{else}}
          <a href="{{{link.url}}}">{{link.text}}</a>
        {{/isArray}}
        {{/hasKey}}
          {{#hasKey this "text"}}
            <span>{{{text}}}</span>
          {{/hasKey}}
       </li>
     {{/each}}
  </ul>
</li>
